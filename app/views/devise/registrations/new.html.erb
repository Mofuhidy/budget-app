<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<div class="bg-primary text-center py-6 flex justify-between items-center">
    <%= link_to("javascript:history.back()", class: "text-white text-2xl px-4 py-2.5") do %>
          <img class="h-6" src="data:image/png;base64,">
        <% end %>
  <h2 class="font-medium text-2xl capitalize text-white">Register</h2>
 <%= f.submit "Next", class: 'text-center text-white bg-primary hover:scale-105 transition-all px-4 ' %>
</div>
<div class="flex flex-col justify-center items-center container pt-12 ">
<div class="flex flex-col gap-0.5">
  <%= render "devise/shared/error_messages", resource: resource %>
 <div class="field">
<%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "Full name", class: "w-full my-2" %>
</div>
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "w-full my-2" %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "new-password", class: "w-full my-2", placeholder: 'Password
(6 characters minimum)' %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full my-2", placeholder:'Password confirmation' %>
  </div>
<% end %>
</div>
</div>

