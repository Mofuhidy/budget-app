<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="bg-primary text-center py-6 flex justify-between items-center">
   <%= link_to("javascript:history.back()", class: "text-white text-2xl px-4 py-2.5") do %>
      <img class="h-6" src="data:image/png;base64,">
  <% end %>
  <h2 class="font-medium text-2xl capitalize text-white">Login</h2>
    <%= f.submit "Log in",  class: 'my-2 text-center text-white bg-primary px-4 rounded-[15px] hover:scale-105 transition-all' %>
</div>
<div class="flex flex-col justify-center items-center container pt-12 ">
<div class="flex flex-col gap-0.5">
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'w-full my-2', placeholder: 'Email' %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "current-password", class: 'w-full my-2', placeholder: 'password' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me, class: 'my-2' %>
      <%= f.label :remember_me %>
    </div>
  <% end %>


<% end %>
</div>
</div>